{
  "name": "Neonless",
  "version": "0.0.1",
  "description": "",
  "main": "./src/index.js",
  "scripts": {
    "start": "concurrently \"npm run start:renderer\" \"npm run start:main\"",
    "start:renderer": "cd ./src/renderer && npm start",
    "start:main": "electron src/index.js",
    "postinstall": "ts-node .ext/scripts/check-native-dep.js && electron-builder install-app-deps",
    "build": "ts-node ./.ext/scripts/clean.js && concurrently \"npm run build:renderer\" \"npm run build:main\" \"npm run build:index\"",
    "build:main": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.ext/configs/webpack.config.main.prod.ts",
    "build:renderer": "cd ./src/renderer && npm run build",
    "build:index": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.ext/configs/webpack.config.index.prod.ts",
    "package": "npm run build && ts-node ./.ext/scripts/clean-dist.js && electron-builder build --publish never",
    "test": "node ./src/__test__/index.js",
    "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir release/app",
    "icon": "node ./.scripts/icon/index.js"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/plugin-transform-arrow-functions": "^7.20.7",
    "concurrently": "^7.5.0",
    "cross-env": "^7.0.3",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "electron": "21.2.3",
    "electron-builder": "23.6.0",
    "electron-rebuild": "^3.2.9",
    "rimraf": "^3.0.2",
    "terser-webpack-plugin": "^5.3.6",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "webpack": "^5.75.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "bytenode": "1.3.5",
    "compressing": "^1.7.0",
    "crypto-js": "4.1.1",
    "electron-is-dev": "^2.0.0",
    "electron-localshortcut": "^3.2.1",
    "electron-log": "^4.1.0",
    "fs-extra": "^11.1.0",
    "hasha": "^5.2.2",
    "http-server": "^14.1.1",
    "lodash": "4.17.21",
    "node-downloader-helper": "^2.1.6"
  },
  "build": {
    "appId": "com.neonless.app",
    "asar": false,
    "directories": {
      "app": "release/app",
      "output": "release/build"
    },
    "mac": {
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.developer-tools",
      "extraResources": [
        "resources"
      ],
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "background": "assets/background.png",
      "title": "${productName}"
    },
    "win": {
      "icon": "assets/icons/icon.ico",
      "extraResources": [
        "resources"
      ],
      "target": [
        "nsis",
        "zip"
      ]
    },
    "files": [
      "node_modules",
      "dist",
      "package.json"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Howlcn1997/electron-demo.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Howlcn1997/electron-demo/issues"
  },
  "homepage": "https://github.com/Howlcn1997/electron-demo#readme"
}
