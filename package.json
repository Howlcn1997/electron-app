{
  "name": "electron-demo",
  "version": "1.0.0",
  "description": "",
  "main": "./src/index.js",
  "scripts": {
    "start": "concurrently \"npm run start:renderer\" \"npm run start:main\"",
    "start:renderer": "cd ./src/renderer && npm start",
    "start:main": "electron src/main/main.js",
    "postinstall": "ts-node .ext/scripts/check-native-dep.js && electron-builder install-app-deps",
    "build": "concurrently \"npm run build:renderer\" \"npm run build:main\" \"npm run build:updater\"",
    "build:main": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.ext/configs/webpack.config.main.prod.ts",
    "build:renderer": "cd ./src/renderer && npm run build",
    "build:updater": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.ext/configs/webpack.config.updater.prod.ts",
    "package": "npm run build && ts-node ./.ext/scripts/clean-dist.js && ts-node ./.ext/scripts/link-modules.ts && electron-builder build --publish never",
    "test": "ts-node ./.ext/scripts/link-modules.ts && electron-builder build --publish never",
    "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir release/app"
  },
  "devDependencies": {
    "concurrently": "^7.5.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "electron": "21.2.3",
    "electron-builder": "23.6.0",
    "electron-localshortcut": "^3.2.1",
    "electron-rebuild": "^3.2.9",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.1",
    "rimraf": "^3.0.2",
    "terser-webpack-plugin": "^5.3.6",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "webpack": "^5.75.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "crypto-js": "4.1.1",
    "electron-is-dev": "^2.0.0",
    "http-server": "^14.1.1",
    "lodash": "4.17.21",
    "bytenode": "^1.3.6",
    "electron-log": "^4.1.0"
  },
  "build": {
    "appId": "com.demo.app",
    "asar": false,
    "directories": {
      "app": "release/app",
      "buildResources": "resources",
      "output": "release/build"
    },
    "mac": {
      "icon": "assets/icons/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "assets/icons/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "files": [
      "node_modules",
      "dist",
      "package.json"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Howlcn1997/electron-demo.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Howlcn1997/electron-demo/issues"
  },
  "homepage": "https://github.com/Howlcn1997/electron-demo#readme"
}
